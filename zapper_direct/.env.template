# ─── Zapper Direct — Configuration Template ─────────────────────────────────
# Copy this file to .env and fill in your values.
#   cp .env.template .env

# Required: Azure Storage connection string
# Find it in the Azure Portal → Storage account → Access keys
AZURE_CONN_STR="DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net"

# Required: Default target container (can be overridden per run via CLI argument)
CONTAINER_NAME="my-uploads"

# Size of each upload block in MB (1–4000). Larger = fewer API calls, more RAM per thread.
# Recommended: 64–256 MB for fast networks, 16–32 MB for slower/unreliable connections.
CHUNK_SIZE_MB=64

# Number of parallel upload threads. Tune based on your upload bandwidth and CPU.
# Rule of thumb: start at 4× the number of CPU cores, cap at ~32.
CONCURRENCY=8

# Maximum retry attempts per chunk on transient network errors (default: 5)
MAX_RETRIES=5

# Base delay in seconds for exponential backoff between retries (default: 2)
# Actual delay = RETRY_BASE_DELAY ^ attempt_number
RETRY_BASE_DELAY=2

# Optional: Override directory (or full path) for progress log files.
# If unset, logs are written to ./logs/ next to uploader.py.
# LOG_PATH="/var/log/zapper_direct"
